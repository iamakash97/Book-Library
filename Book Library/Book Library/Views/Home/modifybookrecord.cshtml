@model IEnumerable<BOL.Book>
@{
    ViewBag.Title = "showbooklist";
}

<h2>Edit Book Records </h2>

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ser No</th>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Publisher</th>
                <th>Year</th>
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @{

                foreach (BOL.Book b in Model)
                {
                        <tr>
                            <td>@b.serno</td>
                            <td>@b.title</td>
                            <td>@b.author</td>
                            <td>@b.ISBN</td>
                            <td>@b.publisher</td>
                            <td>@b.year</td>
                            <td><a href="/Home/deletebook?serno=@b.serno"><button class="btn btn-danger">Delete</button></a></td>
                            <td><a  href="/Home/showbook?serno=@b.serno"><button class="btn btn-success">Update</button></a></td>
                        </tr>
                }
            }
        </tbody>


    </table>
</div>
